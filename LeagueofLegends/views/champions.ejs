<%- include("partials/header")%>
<h2>Champions</h2>
<br>
<section>
    <% for (let champ of champion){%>
        <div id="champlist">
            <a href="/Champions/<%= champ.id%>">
                <img class= "image" src="<%= champ.imageUrl %>" alt="<%= champ.name %>">
            </a>
            <p><%= champ.name %></p>
            <p><%= champ.id %></p>
            <p><%= champ.releasedate %></p>
            <p><%= champ.role %></p>
            <p><%= champ.race %></p>
            <% if(user.role === "ADMIN") {%>
            <a href="/<%= champ.id%>/update"><button type="button">Edit</button></a>
            <%}%>
        </div>
    <%}%>
</section>
<%- include("partials/footer")%>
